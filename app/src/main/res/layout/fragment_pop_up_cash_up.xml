<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m1kes.parkingdemo.fragments.dialogs.PopUpCashUp"
   >

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Active User:"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:id="@+id/txtitem9"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:textColor="@color/colorPrimary2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:layout_height="wrap_content"
                android:id="@+id/txtCurrentUserCashup"
                android:layout_margin="10dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_weight="12.34"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textSize="18sp" />

            <TextView
                android:text="$"
                android:layout_width="wrap_content"

                android:id="@+id/textView15"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/marshalUp_txtShiftTotal"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_custom_selector"
                android:paddingRight="4dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                 />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Confirm Total"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_weight="12.34"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textSize="18sp" />

            <TextView
                android:text="$"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/marshalUp_txtShiftTotalConfirm"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_custom_selector"
                android:paddingRight="4dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Vehicles Still In:"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:id="@+id/textView35"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:layout_height="wrap_content"
                android:id="@+id/marshalUp_txtVehiclesIn"
                android:layout_margin="10dp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
