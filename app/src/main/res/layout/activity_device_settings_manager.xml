<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"></TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="General"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:text="Device Model"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDeviceModel"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Device IMEI"

                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtDeviceIMEI" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Terminal ID"

                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtDeviceTerminalID" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Activated"

                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtDeviceActivationStatus" />
        </TableRow>



        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Version"

                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtVersionNoSettings" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/txtInfoStatus"
                android:text="Sync Status"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Unsynced Shifts"

                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtUnsyncedShiftsSettings" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Unsynced Transactions"

                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/txtTransUnsyncSettings" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtUnsyncedTransSettings" />
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/txtInfoSecurityStatus"
                android:text="Security Status"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Linked Account"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_account_circle_grey600_48dp"
                    android:id="@+id/imageView9"
                    android:layout_weight="1" />

                <TextView
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/txtLinkedAccount"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="username"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEditLinkedAcc"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:layout_weight="1" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="FingerPrint Support"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtFingerPrintSupported" />
        </TableRow>





    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/app_login_logo_3"
            android:id="@+id/imageView10" />
    </LinearLayout>


</LinearLayout>

</ScrollView>