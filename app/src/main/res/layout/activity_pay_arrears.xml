<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="12.34">

                            <TextView
                                android:text="Registration Number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="12.34">

                            <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Arrears_RegNumber"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textAppearance="@style/MyTheme.ActionBar.TitleTextStyle"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="12.34">

                            <TextView
                                android:text="Arrears Owing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material"
                                android:id="@+id/txtCurrentUserBalanceStatus" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="12.34">

                            <TextView
                                android:text="$0.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtArrearsCurrentUserBalance"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textAppearance="@style/MyTheme.ActionBar.TitleTextStyle"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>





                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <TextView
                                android:text="Last Logged"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Arrears_lastLogged"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textAppearance="@style/MyTheme.ActionBar.TitleTextStyle"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>





                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <TextView
                                android:text="Payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="213dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp">



                            <TextView
                                android:text="$"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:id="@+id/editFinePayment"
                                android:background="@drawable/edit_text_custom_selector"
                                android:paddingRight="4dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:layout_weight="0.40"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <TextView
                                android:text="Tendered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="213dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp">



                            <TextView
                                android:text="$"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:id="@+id/editTender"
                                android:background="@drawable/edit_text_custom_selector"
                                android:paddingRight="4dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:layout_weight="0.40"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <TextView
                                android:text="Change"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="213dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp">



                            <TextView
                                android:text="$"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:id="@+id/editChange"
                                android:background="@drawable/edit_text_custom_selector"
                                android:paddingRight="4dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:layout_weight="0.40"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <TextView
                                android:text="Payment Method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtPaymentMethod1"
                                android:layout_weight="1"
                                android:textStyle="normal|bold"
                                android:textAppearance="@android:style/TextAppearance.Material"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/Arrears_spinnerPaymentMethods"
                                style="@style/spinner_style"
                                android:popupBackground="#cccccc"
                                android:layout_weight="20"
                                android:layout_margin="4dp"
                                android:prompt="@string/payment_method_spinner_prompt"
                                android:entries="@array/paymentMethods"
                                android:spinnerMode="dialog"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnCancelPayment"
                            android:layout_weight="1"

                          />

                        <Button
                            android:text="Pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnPayFine"
                            android:layout_weight="1"

                        />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>